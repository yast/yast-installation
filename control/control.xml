<?xml version="1.0"?>
<productDefines  xmlns="http://www.suse.com/1.0/yast2ns"
    xmlns:config="http://www.suse.com/1.0/configns">

<!--
Work around for the text domain
textdomain="control"
-->

    <textdomain>control</textdomain>
    <!-- global data to be set in the initial proposal -->
    <globals>
        <language>en_US</language>
        <keyboard>en_US</keyboard>
        <timezone>Canada/Eastern</timezone>
    </globals>

    <!-- Force a selection (`fixed) to be used instead of automatically
    Calculating the selection depending on space (`auto)  -->
    <software>
        <selection_type config:type="symbol">auto</selection_type>
        <base_selection>Minimal</base_selection>
        <addons config:type="list">
            <addon>X11</addon>
        </addons>
        <packages config:type="list">
            <package>package</package>
        </packages>
    </software>

    <proposals config:type="list">
        <proposal>
            <!-- installation, autoinst, update, repair, etc. -->
            <mode>installation</mode>
            <!-- initial or continue -->
            <stage>initial</stage>
            <!-- Type of proposal, initial, hardware, network -->
            <type>initial</type>

            <!-- Proposal modules, order matters -->
            <modules config:type="list">
                <module>hwinfo</module>
                <module>mode</module>
                <module>keyboard</module>
                <module>mouse</module>
                <module>partitions</module>
                <module>software</module>
                <module>bootloader</module>
                <module>timezone</module>
                <module>language</module>
                <module>runlevel</module>
            </modules>
        </proposal>
        <proposal>
            <mode>normal</mode>
            <type>dirinstall</type>
            <stage>normal</stage>
            <modules config:type="list">
                <module>dirinstall_options</module>
                <module>software</module>
            </modules>
        </proposal>
        <proposal>
            <mode>installation</mode>
            <type>uml</type>
            <stage>normal</stage>
            <modules config:type="list">
                <module>uml_user</module>
                <module>uml_options</module>
                <module>uml_disks</module>
                <module>uml_network</module>
            </modules>
        </proposal>
        <proposal>
            <mode>update</mode>
            <type>initial</type>
            <stage>normal</stage>
            <modules config:type="list">
                <module>mode</module>
                <module>rootpart</module>
                <module>update</module>
                <module>packages</module>
                <module>backup</module>
                <module>language</module>
                <module>keyboard</module>
            </modules>
        </proposal>
        <proposal>
            <mode>update</mode>
            <stage>initial</stage>
            <type>initial</type>
            <modules config:type="list">
                <module>mode</module>
                <module>rootpart</module>
                <module>update</module>
                <module>packages</module>
                <module>backup</module>
                <module>language</module>
                <module>keyboard</module>
            </modules>
        </proposal>
        <proposal>
            <archs>s390</archs>
            <mode>installation</mode>
            <stage>initial</stage>
            <type>initial</type>
            <modules config:type="list">
                <module>mode</module>
                <module>partitions</module>
                <module>software</module>
                <module>timezone</module>
                <module>language</module>
            </modules>
        </proposal>
        <proposal>
            <archs>s390</archs>
            <mode>update</mode>
            <stage>initial</stage>
            <type>initial</type>
            <modules config:type="list">
                <module>mode</module>
                <module>rootpart</module>
                <module>update</module>
                <module>packages</module>
                <module>backup</module>
                <module>language</module>
            </modules>
        </proposal>
        <proposal>
            <type>network</type>
            <stage>continue</stage>
            <modules config:type="list">
                <module>lan</module>
                <module>dsl</module>
                <module>isdn</module>
                <module>modem</module>
                <module>proxy</module>
                <module>remote</module>
            </modules>
        </proposal>
        <proposal>
            <type>hardware</type>
            <stage>continue</stage>
            <modules config:type="list">
                <module>x11</module>
                <module>printer</module>
                <module>sound</module>
                <module>tv</module>
            </modules>
        </proposal>
        <proposal>
            <archs>s390,ppc64</archs>
            <type>network</type>
            <stage>continue</stage>
            <modules config:type="list">
                <module>lan</module>
                <module>proxy</module>
                <module>remote</module>
            </modules>
        </proposal>
        <proposal>
            <archs>ppc64</archs>
            <type>hardware</type>
            <stage>continue</stage>
            <modules config:type="list">
                <module>x11</module>
                <module>printer</module>
            </modules>
        </proposal>
        <proposal>
            <archs>s390</archs>
            <type>hardware</type>
            <stage>continue</stage>
            <modules config:type="list">
                <module>printer</module>
            </modules>
        </proposal>
    </proposals>

    <workflows config:type="list">
        <workflow>
            <!-- default settings for all modules -->
            <defaults>
                <!-- arguments for the clients -->
                <arguments>false,false</arguments>
                <!-- allowed architectures "all", "i386", "i386,ia64,x86_64"  -->
                <archs>all</archs>
            </defaults>
            <stage>initial</stage>
            <!-- 'label' is what the user will see -->
	    <label>Base Installation</label>
            <mode>installation</mode>
            <modules  config:type="list">
                <module>
                    <name>info</name>
                    <arguments>false,true</arguments>
                </module>
                <module>
                    <name>language</name>
                    <arguments>false,true,true</arguments>
                    <!-- 'label' is the workflow step description the user
	                 will see in the side bar during installation.   -->
	            <label>Language</label>
                </module>
                <module>
                    <name>proposal</name>
                    <arguments>true,true,`ini</arguments>
	            <label>Installaton Settings</label>
                </module>
                <module>
                    <name>do_resize</name>
                    <update config:type="boolean">false</update>
                    <archs>i386,x86_64,ia64</archs>
	            <label>Perform Installation</label>
                </module>
                <module>
                    <name>prepdisk</name>
                    <!-- Multiple modules with the same 'label' will be
                         collapsed to one single user-visible step.
                         The step is considered finished when the last module
                         with the same 'label' is finished.  -->
	            <label>Perform Installation</label>
                </module>
                <module>
                    <name>kickoff</name>
	            <label>Perform Installation</label>
                </module>
                <module>
                    <name>rpmcopy</name>
	            <label>Perform Installation</label>
                </module>
                <module>
                    <name>finish</name>
	            <label>Perform Installation</label>
                </module>
            </modules>
        </workflow>
        <workflow>
            <defaults>
                <arguments>false,false</arguments>
                <archs>all</archs>
            </defaults>
            <stage>initial</stage>
	    <label>Preparation</label>
            <mode>repair</mode>
            <modules  config:type="list">
                <module>
	            <label>System Information</label>
                    <name>info</name>
                    <arguments>false,true</arguments>
                </module>
                <module>
	            <label>Perform Repair</label>
                    <name>repair</name>
                    <arguments>false,true,true</arguments>
                </module>
            </modules>
        </workflow>
        <workflow>
            <defaults>
                <arguments>false,false</arguments>
                <archs>all</archs>
            </defaults>
            <stage>initial</stage>
	    <label>Base Installation</label>
            <mode>screen_shot</mode>
            <modules  config:type="list">
                <module>
 	            <label>Language</label>
                    <name>language</name>
                    <arguments>false,true,true</arguments>
                </module>
                <module>
	            <label>Installaton Settings</label>
                    <name>proposal</name>
                    <arguments>true,true,`ini</arguments>
                </module>
                <module>
	            <label>Perform Installation</label>
                    <name>do_resize</name>
                    <update config:type="boolean">false</update>
                    <archs>i386,x86_64,ia64</archs>
                </module>
                <module>
	            <label>Perform Installation</label>
                    <name>prepdisk</name>
                </module>
                <module>
	            <label>Perform Installation</label>
                    <name>kickoff</name>
                </module>
                <module>
	            <label>Perform Installation</label>
                    <name>rpmcopy</name>
                </module>
            </modules>
        </workflow>
        <workflow>
            <defaults>
                <arguments>false,false</arguments>
                <archs>all</archs>
            </defaults>
            <stage>initial</stage>
	    <label>Base Installation</label>
            <mode>demo</mode>
            <modules  config:type="list">
                <module>
	            <label>Language</label>
                    <name>info</name>
                    <arguments>false,true</arguments>
                </module>
                <module>
	            <label>Language</label>
                    <name>language</name>
                    <arguments>false,true,true</arguments>
                </module>
                <module>
	            <label>Installaton Settings</label>
                    <name>proposal</name>
                    <arguments>true,true,`ini</arguments>
                </module>
                <module>
	            <label>Perform Installation</label>
                    <name>do_resize</name>
                    <update config:type="boolean">false</update>
                    <archs>i386,x86_64,ia64</archs>
                </module>
                <module>
 	            <label>Perform Installation</label>
                   <name>prepdisk</name>
                </module>
                <module>
	            <label>Perform Installation</label>
                    <name>kickoff</name>
                </module>
                <module>
	            <label>Perform Installation</label>
                    <name>rpmcopy</name>
                </module>
            </modules>
        </workflow>
        <workflow>
            <stage>continue</stage>
            <label>Configuration</label>
            <mode>installation</mode>
            <defaults>
                <arguments>false,false</arguments>
                <archs>all</archs>
            </defaults>
            <modules  config:type="list">
                <module>
                    <name>netsetup</name>
                    <arguments>false,false,`up</arguments>
                </module>
                <module>
                    <name>netprobe</name>
                </module>
                <module>
                    <name>rpmcopy</name>
                </module>
                <module>
	            <label>Root Password</label>
                    <name>root</name>
                    <arguments>false,true</arguments>
                </module>
                <module>
	            <label>Network</label>
                    <name>proposal</name>
                    <arguments>true,true,`net</arguments>
                </module>
                <module>
	            <label>Network</label>
                    <name>ask_net_test</name>
                    <arguments>true,true</arguments>
                </module>
                <module>
	            <label>Network</label>
                    <name>do_net_test</name>
                    <arguments>true,true</arguments>
                </module>
                <module>
	            <label>Online Update</label>
                    <name>you</name>
                    <arguments>true,true</arguments>
                </module>
                <module>
	            <label>Users</label>
                    <name>auth</name>
                    <arguments>true,true</arguments>
                </module>
                <module>
	            <label>Users</label>
                    <name>user</name>
                    <arguments>true,true</arguments>
                </module>

                <module>
	            <label>Clean Up</label>
                    <name>suseconfig</name>
                    <arguments>false,false</arguments>
                </module>
                <module>
	            <label>Release Notes</label>
                    <name>release_notes</name>
                    <arguments>true,true</arguments>
                </module>
                <module>
	            <label>Device Configuration</label>
                    <name>proposal</name>
                    <arguments>true,true,`hw</arguments>
                </module>
                <module>
                    <name>congratulate</name>
                    <arguments>true,true</arguments>
                </module>
            </modules>
        </workflow>
        <workflow>
            <stage>initial</stage>
            <label>Configuration</label>
            <mode>autoinst</mode>
            <defaults>
                <arguments>false,false</arguments>
                <archs>all</archs>
            </defaults>
            <modules  config:type="list">
                <module>
                    <name>autoinit</name>
                    <archs>all</archs>
                </module>
                <module>
	            <label>Settings</label>
                    <name>autosetup</name>
                </module>
                <module>
	            <label>Perform Installation</label>
                    <name>prepdisk</name>
                </module>
                <module>
	            <label>Perform Installation</label>
                    <name>kickoff</name>
                </module>
                <module>
	            <label>Perform Installation</label>
                    <name>rpmcopy</name>
                </module>
                <module>
	            <label>Perform Installation</label>
                    <name>finish</name>
                </module>
            </modules>
        </workflow>
        <workflow>
            <stage>continue</stage>
            <label>Configuration</label>
            <mode>autoinst</mode>
            <modules  config:type="list">
                <module>
                    <name>netsetup</name>
                </module>
                <module>
                    <name>netprobe</name>
                </module>
                <module>
                    <name>autopost</name>
                </module>
                <module>
	            <label>Perform Installation</label>
                    <name>rpmcopy</name>
                </module>
                <module>
	            <label>X11 Setup</label>
                    <name>x11</name>
                </module>
                <module>
                    <name>autoconfigure</name>
                </module>
                <module>
	            <label>Clean Up</label>
                    <name>suseconfig</name>
                </module>
            </modules>
        </workflow>
    </workflows>
</productDefines>
